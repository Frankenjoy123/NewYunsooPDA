<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunsoo.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yunsoo.activity.ScanActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <!-- 声明ListActivity -->
        <activity
            android:name="com.yunsoo.activity.ListActivity"
            android:label="ListActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.MainActivity"
            android:label="@string/title_activity_welcome"
            android:screenOrientation="portrait">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.yunsoo.activity.WelcomeActivity"
            android:icon="@drawable/app_icon"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yunsoo.activity.PathActivity"
            android:label="@string/title_activity_path"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.PathHistoryActivity"
            android:label="@string/title_activity_path_history"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.PackedHistoryActivity"
            android:label="@string/title_activity_packed_history"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.PackDetail"
            android:label="@string/title_activity_pack_detail"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.FixPackActivity"
            android:label="@string/title_activity_fix_pack"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.yunsoo.activity.AuthorizeActivity"
            android:label="@string/title_activity_authorize"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
