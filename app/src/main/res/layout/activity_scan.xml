<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >
    
        	    <com.itxiaowu.view.TitleBar
        android:id="@+id/package_title_bar"
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/linearLayout_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/package_title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="规格:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/input"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="5"
            android:textSize="30sp" />
        <TextView

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="个/箱"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/down_arrow"
            android:clickable="true" />
    </LinearLayout>
    
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linearLayout_standard"
        android:layout_marginTop="30dp"
        android:editable="false" 
        android:background="@null"
        android:gravity="center_horizontal"
        />    

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />


      <TextView
          android:id="@+id/progressText"
          android:layout_below="@id/progressBar1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="正在进行:0/5"
          android:textSize="20sp"
          android:layout_marginLeft="10dp" />
      
          <EditText
        android:id="@+id/package_key_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/progressText"
        android:layout_marginTop="30dp"
        android:editable="false" 
        android:background="@null"
        android:gravity="center_horizontal"
        /> 
        
    <TextView
        android:id="@+id/finish_package_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_packageActivityFinish"
        android:layout_alignParentLeft="true"
        android:text="今日已打包：0箱"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />
    <Button 
        android:id="@+id/btn_getPackages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_packageActivityFinish"
        android:layout_alignParentRight="true"
        android:text="查看已打包装"/>
    
    <Button 
        android:id="@+id/btn_packageActivityFinish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="返回"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
    

</RelativeLayout>