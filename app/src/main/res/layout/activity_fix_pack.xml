<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunsoo.activity.FixPackActivity">

    <com.yunsoo.view.TitleBar
        android:id="@+id/fix_title_bar"
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:id="@+id/ll_fix_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fix_title_bar"
        android:orientation="horizontal">

        <TextView android:text="@string/pack_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/et_fix_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="center"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_fix_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/fix_tip"
        />

    <ListView
        android:id="@+id/lv_fix_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_fix_top"
        android:layout_above="@+id/btn_finish_fix"
        ></ListView>

    <EditText
        android:id="@+id/et_get_packCode"
        android:editable="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=" "/>

    <EditText
        android:id="@+id/et_get_productCode"
        android:editable="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=" "/>
    
    <Button
        android:id="@+id/btn_finish_fix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/tv_fix_tip"
        android:layout_centerHorizontal="true"
        android:text="修改完成"/>


</RelativeLayout>
